<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="nameField" GridPane.columnSpan="2"/>
    <Button onMouseClicked="#onClickListner" fx:id="helloBtn" GridPane.rowIndex="1" text="Say Hello!"/>
    <Button fx:id="byeBtn" GridPane.rowIndex="1" GridPane.columnIndex="1" text="Say Bye!"/>
    <CheckBox fx:id="clear" text="Check to clear!" GridPane.rowIndex="2"/>
    <Label fx:id="status" text="You'll See The Change" GridPane.rowIndex="3"/>



</GridPane>