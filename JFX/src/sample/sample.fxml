<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField text="Type Here!" onKeyReleased="#onKeyReleaseListner" fx:id="nameField" GridPane.columnSpan="2"/>

    <Button onMouseClicked="#onClickListner" text="Say Hello!" fx:id="helloBtn" GridPane.rowIndex="1"/>

    <Button onMouseClicked="#onClickListner" text="Say Bye!" fx:id="byeBtn" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Text fx:id="status" GridPane.rowIndex="2" GridPane.columnSpan="2" text="You'll see the change!"/>

    <CheckBox fx:id="clear" GridPane.rowIndex="3" text="Clear Text Field !"/>

    <Label fx:id="threadLabel" text="Something will come up!" GridPane.rowIndex="4"/>
</GridPane>